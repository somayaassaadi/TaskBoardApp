<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:TaskBoardApp.ViewModels"
    x:Class="TaskBoardApp.Views.StatsPage"
    Title="Statistiques">

    <ContentPage.BindingContext>
        <viewModels:StatsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Title -->
            <Label Text="📈 Statistiques des Tâches"
                   FontSize="34"
                   FontAttributes="Bold"
                   TextColor="#512DA8"
                   HorizontalOptions="Center" />

            <!-- Stats Card -->
            <Frame BorderColor="#DDDDDD"
                   BackgroundColor="#F5F5F5"
                   CornerRadius="16"
                   Padding="20"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Résumé"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="#512DA8"
                           HorizontalOptions="Center" />

                    <Label Text="{Binding TotalTasks, StringFormat='🗂️ Nombre total de tâches : {0}'}"
                           FontSize="20"
                           TextColor="#333333"
                           HorizontalOptions="Center" />

                    <Label Text="{Binding CompletionRate, StringFormat='✅ Taux de complétion : {0:F1}%'}"
                           FontSize="20"
                           TextColor="#333333"
                           HorizontalOptions="Center" />

                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <Button Text="🔄 Recharger les stats"
                    Command="{Binding LoadStatsCommand}"
                    BackgroundColor="#512DA8"
                    TextColor="White"
                    CornerRadius="12"
                    Padding="10" />

            <Button Text="⬅️ Retour"
                    Clicked="OnBackClicked"
                    BackgroundColor="#D1C4E9"
                    TextColor="#512DA8"
                    CornerRadius="12"
                    Padding="10" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
